<div class="edit-post-form">
  <h2>Edit Post</h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Post Title:</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <label for="post-text">Post Content:</label>
      <textarea name="post-text" id="post-text">{{post.post_text}}</textarea>
    </div>

    <button type="submit" class="btn btn-secondary btn-md">Update Post</button>
    <button type="button" class="btn btn-secondary btn-md">Delete Post</button>
  </form>
</div>

<script src="/public/js/edit-post.js"></script>
<script src="/public/js/delete-post.js"></script>


