<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4>Create New Post</h4>
        </div>
        <div class="card-body">
          <form class="new-post-form" method="POST" action="/process-post">
            <div class="form-group">
              <label for="title">Title</label>
              <input name="post-title" type="text" class="form-control" id="title" aria-describedby="titleHelp" placeholder="Enter title">
            </div>
            <div class="form-group">
              <label for="textEntry">Content</label>
              <textarea name="post-body" class="form-control" id="textEntry" rows="3" placeholder="Enter content"></textarea>
            </div>
            <input type="submit" class="btn btn-secondary btn-md" value="create">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/public/js/add-post.js"></script>
