<div class="comments">
  <h3>Comments:</h3>
  {{#if comments}}
    {{#each comments}}
      <div class="comment">
        <h4>{{user.username}} on {{format_date created_at}}:</h4>
        <p>{{comment_text}}</p>
      </div>
    {{/each}}
  {{else}}
    <p>No comments yet. Be the first to comment!</p>
  {{/if}}
</div>

<form class="comment-form">
  <div class="form-group">
    <label for="comment_text">Comment:</label>
    <textarea name="comment_text" class="form-control" id="comment_text" rows="3" placeholder="Enter comment"></textarea>
  </div>
  <input type="submit" class="btn btn-secondary btn-md" value="Add Comment">
</form>

<script src="/js/add-comment.js"></script>
