<div class="row">
  <div class="col-md-8">
    {{> post-info post}}

    {{> comments post.comments}}

    <form class="comment-form">
      <div class="form-group">
        <label for="comment-body">Add a comment:</label>
        <textarea name="comment-body" class="form-control" id="comment-body" rows="3" placeholder="Enter your comment"></textarea>
      </div>
      <button type="submit" class="btn btn-secondary btn-md">Submit</button>
    </form>

    <script src="/js/add-comment.js"></script>
  </div>
</div>

